<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainPage">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <MenuBar fx:id="mainMenuBar" BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="Rock Wall Management">
                  <items>
                        <MenuItem fx:id="menuLogin" mnemonicParsing="false" text="Login" />
                        <MenuItem fx:id="mainMenuExit" mnemonicParsing="false" text="Exit Program" />
                  </items>
                </Menu>
              </menus>
               <VBox.margin>
                  <Insets bottom="22.0" />
               </VBox.margin>
               <BorderPane.margin>
                  <Insets bottom="34.0" />
               </BorderPane.margin>
            </MenuBar>
         </top>
         <center>
            <VBox alignment="CENTER">
               <children>
                  <ImageView fitHeight="500.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@SDSULogo.png" />
                     </image>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ImageView>
                  <VBox alignment="CENTER" spacing="12.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="South Dakota State University Rock Wall Management" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="12.0">
                           <children>
                           <Button mnemonicParsing="false" text="Sign Waiver" />
                           <Button mnemonicParsing="false" text="Check In/Out" />
                           <Button mnemonicParsing="false" text="View Patron Account" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="12.0">
                           <children>
                           <Button mnemonicParsing="false" text="View Inventory">
                              <cursor>
                                 <Cursor fx:constant="DEFAULT" />
                              </cursor>
                              </Button>
                           <Button mnemonicParsing="false" text="Generate Report" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="12.0" left="20.0" right="20.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
