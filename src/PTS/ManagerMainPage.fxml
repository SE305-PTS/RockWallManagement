<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PTS.ManagerMainPage">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox spacing="12.0">
               <children>
                  <MenuBar fx:id="managerMenuBar" BorderPane.alignment="CENTER">
                    <menus>
                      <Menu mnemonicParsing="false" text="Rock Wall Management">
                        <items>
                          <MenuItem fx:id="managerMenuLogout" mnemonicParsing="false" text="Manager Logout" />
                              <MenuItem fx:id="managerMenuExit" mnemonicParsing="false" text="Exit Program" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
                  <HBox alignment="TOP_RIGHT">
                     <children>
                        <Text fill="#0018ff" strokeType="OUTSIDE" strokeWidth="0.0" text="Logged in as Manager">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Text>
                     </children>
                     <VBox.margin>
                        <Insets bottom="12.0" left="20.0" right="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </top>
         <center>
            <VBox alignment="CENTER">
               <children>
                  <ImageView fitHeight="500.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@SDSULogo.png" />
                     </image>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ImageView>
                  <VBox alignment="CENTER" spacing="12.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="South Dakota State University Rock Wall Management">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="12.0">
                           <children>
                              <Button fx:id="managerSignWaiver" mnemonicParsing="false" text="Sign Waiver" />
                              <Button fx:id="managerCheckIn" mnemonicParsing="false" text="Check In/Out" />
                              <Button fx:id="managerPatrons" mnemonicParsing="false" text="View/Edit Patron Account" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="12.0">
                           <children>
                              <Button fx:id="managerInventory" mnemonicParsing="false" text="View/Edit Inventory" />
                              <Button fx:id="managerGenerateReports" mnemonicParsing="false" text="Generate Report" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="12.0" left="20.0" right="20.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
      <VBox prefHeight="200.0" prefWidth="100.0" />
   </children>
</AnchorPane>
